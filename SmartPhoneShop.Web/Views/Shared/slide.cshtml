@{ 
    var listSlide = ViewBag.listSlide as List<SmartPhoneShop.Web.Models.SlideViewModel>;
    var listProductHot = ViewBag.listProductHot as List<SmartPhoneShop.Web.Models.ProductViewModel>;
}
<div id="home">
    <!-- container -->
    <div class="home-wrap text-center">
        <!-- home slick -->
        <div id="home-slick">
            <!-- banner -->
            @foreach (var slide in listSlide)
            {
                <div class="banner banner-1">
                    <img src="@slide.Image" height="350" class="" alt="">
                    @*<div class="banner-caption text-center">
                            <h1>Bags sale</h1>
                            <h3 class="white-color font-weak">Up to 50% Discount</h3>
                            <button class="primary-btn">Shop Now</button>
                        </div>*@
                </div>
            }
            <!-- /banner -->

        </div>
        <!-- /home slick -->
    </div>

    <!-- /container -->
</div>
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- banner -->
            @foreach (var productHot in listProductHot)
            {
                 <div class="col-md-4 col-sm-6">
                     <a class="banner banner-1" href="/@productHot.ProductCategory.Alias/@productHot.Alias-@productHot.ID">
                         <img src="@productHot.Image" height="250" alt="@productHot.Name">
                         <div class="banner-caption text-center ">
                             <h3 class="white-color">@string.Format("{0:#,0},000 VND", productHot.Price)</h3>
                             <span class="btn btn-success">Chọn để mua</span>
                         </div>
                         <h2 class="text-black">@productHot.Name</h2>
                     </a>
            </div>
            }
           
            <!-- /banner -->
         

        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
