    <script>
        $(".button-delete").click(function () {
            var id = $(this).data('id');
            var confirmed = confirm("Are you sure delete?");
            if (confirmed) {
                $.ajax({
                    url: '/task-category/delete/' + id,
                    type: 'Delete'
                }).done(function (resultJson) {
                    $('#task-category-' + id).remove();
                    alert(resultJson.message);
                }).error(function (resultJson) {
                    alert('Error' + resultJson.message);
                })
            }
        })
    </script>

    @RenderSection("footerJS", required: false)
