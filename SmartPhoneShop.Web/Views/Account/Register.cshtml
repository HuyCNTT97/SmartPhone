@model SmartPhoneShop.Web.Models.RegisterViewModel
@using BotDetect.Web.Mvc;
@{
    /**/

    ViewBag.Title = "Đăng kí tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />
<style type="text/css">
    .success {
        color: green;
    }

    .fail {
        color: red;
    }
</style>
@section footerJS{

    <script src="~/Assets/client/js/confirmPassword.js"></script>
}
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
 
    <div class="container">
        <div class="row bong">
            <h3 class="text-center uppercase">Đăng kí tài khoản</h3>
        </div>
        <div class="row">
            <div class="col-md-12">
                <!-- Horizontal Form -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Thông tin tài khoản</h3>
                       
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(false, "", new {  @class="maudo bold alert "  })
                        
                        
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="form-horizontal">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">
                                    Họ Tên<span class="text-red"> *</span>
                                </label>

                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model=>model.FullName,htmlAttributes:new {@class= "form-control",
                               @required="required",@placeholder="Bắt buộc nhập"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">
                                    Email<span class="text-red"> *</span>
                                </label>

                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model=>model.Email,htmlAttributes:new {@class= "form-control",
                               @required="required",@placeholder="Bắt buộc nhập",@Type="email"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">
                                    Mật Khẩu<span class="text-red"> *</span>
                                </label>

                                <div class="col-sm-8">
                                    @Html.PasswordFor(model=>model.Password,htmlAttributes:new {@class= "form-control",
                               @required="required",@placeholder="Bắt buộc nhập",@id="password1"})
                                </div>
                                <div class="col-sm-2">
                                    <label id="checkstrongpass"></label>

                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">
                                    Xác Nhận Mật Khẩu<span class="text-red"> *</span>
                                </label>

                                <div class="col-sm-8">
                                    @Html.Password("passwordcomfirm","",new {@class= "form-control",
                               @required="required",@placeholder="Bắt buộc nhập",@id="password2"})
                                </div>
                               
                                <div class="col-sm-2">
                                    <label id="checkstatus"></label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">
                                    Địa Chỉ<span class="text-red"> *</span>
                                </label>

                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model=>model.Address,htmlAttributes:new {@class= "form-control",
                               @required="required",@placeholder="Bắt buộc nhập"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">
                                    Captcha<span class="text-red"> *</span>
                                </label>

                                <div class="col-sm-10">
                                    @{
                                        MvcCaptcha mvcCaptcha = new MvcCaptcha("RegisterCaptcha");

                                    }
                                    @Html.Captcha(mvcCaptcha)
                                    @Html.TextBox("CaptchaCode")
                                </div>
                            </div>
                        </div>
                   
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <a href="/" class="btn btn-danger">Quay Lại Trang Chủ</a>
                            <button type="submit" id="btnCreate" class="btn btn-info pull-right">Tạo Tài Khoản</button>
                        </div>
                        <!-- /.box-footer -->
                    </div>
                </div>
                <!-- /.box -->
                <!-- general form elements disabled -->
                <!-- /.box -->
            </div>
        </div>
    </div>
                                        }

