@model SmartPhoneShop.Web.Models.LoginViewModel
@{
                /**/

                ViewBag.Title = "Login";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Account",new { returnUrl=ViewBag.returnUrl}, FormMethod.Post))
{
    @Html.AntiForgeryToken();
    if (TempData["msgLogin"] != null)
    {
        @Html.Raw(TempData["msgLogin"]);
    }
    <div class="container min-heightne">
        <div class="row bong">
            <h3 class="text-center uppercase">Đăng nhập</h3>
        </div>
        <div class="row">
            <div class="col-md-6">
                <!-- Horizontal Form -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Nhập thông tin</h3>
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="form-horizontal">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-4 control-label">
                                    Tài khoản<span class="text-red"> *</span>
                                </label>

                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model=>model.UserName,htmlAttributes:new {@class= "form-control",
                               @required="required",@placeholder="Bắt buộc nhập"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-4 control-label">
                                    Mật khẩu<span class="text-red"> *</span>
                                </label>

                                <div class="col-sm-8">
                                    @Html.PasswordFor(model=>model.Password,htmlAttributes:new {@class= "form-control",
                               @required="required",@placeholder="Bắt buộc nhập"})
                                </div>
                            </div>

                        </div>

                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" id="btnLogin" class="btn btn-info pull-right uppercase">Đăng nhập</button>
                            <a href="/dang-ki.html"  class="btn  btn-info pull-right margin-rightne uppercase">Đăng kí</a>
                        </div>
                        <!-- /.box-footer -->
                    </div>
                </div>
                <!-- /.box -->
                <!-- general form elements disabled -->
                <!-- /.box -->
            </div>
        </div>
    </div>
}

